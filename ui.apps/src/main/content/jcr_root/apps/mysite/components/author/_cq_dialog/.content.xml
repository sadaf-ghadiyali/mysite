<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Text"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="mysite.components.author.editor"
    helpPath="https://www.adobe.com/go/aem6_5_docs_component_en#Text - HTL">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <fname
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="First Name"
                        name="./fname"
                        validation="mysite-firstname-validation"/>
                    <lname
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                        fieldLabel="Last Name"
                        name="./lname"/>
                    <well
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/well"
                        fieldLabel="Book Details">
                        <items jcr:primaryType="nt:unstructured">
                            <books
                                granite:class="mysite-multifield"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                composite="{Boolean}false"
                                fieldLabel="Author's Books"
                                validation="mysite-multifield">
                                <field
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                    fieldLabel="Book Name"
                                    name="./books"/>
                                <granite:data
                                    jcr:primaryType="nt:unstructured"
                                    max-items="{Long}5"
                                    min-items="{Long}2"/>
                            </books>
                        </items>
                    </well>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
